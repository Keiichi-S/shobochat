
footer#main-footer
    div.box#fixed
        input.input.is-rounded#name(
            type="text"
            placeholder="なまえ"
            )
        div.field.has-addons
            p.control
                button.button#bold-btn
                    span.icon.is-small
                        i.fas.fa-bold
                    span ぼーるど
            p.control
                button.button#italic-btn
                    span.icon.is-small
                        i.fas.fa-italic
                    span いたりっく
            p.control
                button.button#strike-btn
                    span.icon.is-small
                        i.fas.fa-strikethrough
                    span すとらいく
            p.control
                button.button#code-btn
                    span.icon.is-small
                        i.fas.fa-code
                    span こーど
        textarea.shobo-textarea.textarea#message(
            cols="60"
            rows="2"
            placeholder="いまなにしてる？"
            )
        button.button.is-primary.is-rounded#send(disabled)
            span.icon.is-small
                i.fas.fa-paper-plane
            span そうしん
        button.button.is-primary.is-rounded#markdown-preview-open
            span.icon.is-small
                i.fab.fa-markdown
            span ぷれびゅー
        div#queryMessage
