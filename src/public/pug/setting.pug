doctype html
html
    - var head_title="せってい"
    - var head_js_file="setting"
    - var head_css_file="page"
    include parts/_head.pug

    body
        - var title="せってい"
        include parts/_title.pug

        div.columns
            aside.menu.column.is-one-quarter
                p.menu-label こじん
                ul.menu-list
                    li
                        a#username-menu なまえをかえる
                    li
                        a#userpass-menu あいことばをかえる
                p.menu-label ちゃんねる
                ul.menu-list
                    li
                        a#channel-add-menu ちゃんねるをつくる
                        a#channel-del-menu ちゃんねるをけす
                p.menu-label ちゃっと
                ul.menu-list
                    li
                        a(href="/chat") ちゃっとへもどる

            div.column
                // name
                label.shobo-username-setting-mode なまえ
                input.shobo-username-setting-mode.input#username(
                    type="text"
                    placeholder="なまえ"
                    )
                // pass
                label.shobo-userpass-setting-mode あいことば
                input.shobo-userpass-setting-mode.input#userpass(
                        type="password"
                        placeholder="あいことば"
                        )
                label.shobo-userpass-setting-mode あいことば(かくにん)
                input.shobo-userpass-setting-mode.input#userpass-verify(
                        type="password"
                        placeholder="あいことば べりふぁい"
                        )
                label.shobo-channel-add-setting-mode あたらしいちゃんねる
                input.shobo-channel-add-setting-mode.input#new-channel-name(
                        type="text"
                        placeholder="にゅーちゃんねる"
                        )
                label.shobo-channel-del-setting-mode けすちゃんねる
                input.shobo-channel-del-setting-mode.input#del-channel-name(
                        type="text"
                        placeholder="ちゃんねる"
                        )
                label.shobo-channel-del-setting-mode けすちゃんねる(かくにん)
                input.shobo-channel-del-setting-mode.input#del-channel-name-verify(
                        type="text"
                        placeholder="ちゃんねる べりふぁい"
                        )
                button.button.shobo-jmp-btn.is-primary.is-rounded.is-outlined#apply-setting
                    i.fas.fa-sync-alt けってい
                div#setting-status-message
